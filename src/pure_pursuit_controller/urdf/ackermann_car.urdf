<?xml version="1.0"?>
<robot name="ackermann_car">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <link name="base_footprint"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <origin xyz="0 0 -0.15" rpy="0 0 0"/>
  </joint>

  <link name="rear_left_wheel">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="rear_left_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.15 0.175 -0.05" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="10.0" velocity="20.0"/>
  </joint>

  <link name="rear_right_wheel">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="rear_right_joint" type="revolute">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.15 -0.175 -0.05" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="10.0" velocity="20.0"/>
  </joint>

  <link name="front_left_steer">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steer"/>
    <origin xyz="0.15 0.175 -0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="5.0" velocity="5.0"/>
  </joint>

  <link name="front_left_wheel">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="front_left_steer"/>
    <child link="front_left_wheel"/>
    <origin xyz="0 0 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="10.0" velocity="20.0"/>
  </joint>

  <link name="front_right_steer">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steer"/>
    <origin xyz="0.15 -0.175 -0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="5.0" velocity="5.0"/>
  </joint>

  <link name="front_right_wheel">
    <visual>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
      <material name="black"><color rgba="0 0 0 1"/></material>
    </visual>
    <collision>
      <geometry><cylinder radius="0.1" length="0.05"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="front_right_steer"/>
    <child link="front_right_wheel"/>
    <origin xyz="0 0 0" rpy="-1.5707 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1e16" upper="1e16" effort="10.0" velocity="20.0"/>
  </joint>

  <gazebo>
    <plugin filename="gz-sim-ackermann-steering-system" name="gz::sim::systems::AckermannSteering">
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>rear_left_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>rear_right_joint</right_joint>
      <left_steering_joint>front_left_steer_joint</left_steering_joint>
      <right_steering_joint>front_right_steer_joint</right_steering_joint>
      <kingpin_width>0.35</kingpin_width>
      <steering_limit>0.5</steering_limit>
      <wheel_base>0.3</wheel_base>
      <wheel_separation>0.35</wheel_separation>
      <wheel_radius>0.1</wheel_radius>
      <min_velocity>-5</min_velocity>
      <max_velocity>5</max_velocity>
      <min_acceleration>-3</min_acceleration>
      <max_acceleration>3</max_acceleration>
      
      <topic>/cmd_vel</topic>
      <odom_topic>/odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
      <odom_publish_frequency>20</odom_publish_frequency>
    </plugin>
  </gazebo>

</robot>