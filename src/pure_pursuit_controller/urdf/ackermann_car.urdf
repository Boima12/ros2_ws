<?xml version="1.0"?>
<robot name="ackermann_bot">

  <material name="blue"><color rgba="0.2 0.2 1 1"/></material>
  <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
  <material name="white"><color rgba="1 1 1 1"/></material>

  <link name="base_link">
    <visual>
      <geometry><box size="0.5 0.25 0.1"/></geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry><box size="0.5 0.25 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.13" ixy="0.0" ixz="0.0" iyy="0.21" iyz="0.0" izz="0.13"/>
    </inertial>
  </link>

  <link name="rear_left_wheel">
    <visual><geometry><cylinder length="0.04" radius="0.06"/></geometry><material name="black"/></visual>
    <visual><geometry><cylinder length="0.042" radius="0.04"/></geometry><material name="white"/></visual>
    <collision><geometry><cylinder length="0.04" radius="0.06"/></geometry></collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="rear_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.15 0.15 -0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/> 
    <limit effort="500.0" velocity="30.0"/>
  </joint>

  <link name="rear_right_wheel">
    <visual><geometry><cylinder length="0.04" radius="0.06"/></geometry><material name="black"/></visual>
    <visual><geometry><cylinder length="0.042" radius="0.04"/></geometry><material name="white"/></visual>
    <collision><geometry><cylinder length="0.04" radius="0.06"/></geometry></collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="rear_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.15 -0.15 -0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="500.0" velocity="30.0"/>
  </joint>

  <link name="front_left_wheel">
    <visual><geometry><cylinder length="0.04" radius="0.06"/></geometry><material name="black"/></visual>
    <visual><geometry><cylinder length="0.042" radius="0.04"/></geometry><material name="white"/></visual>
    <collision><geometry><cylinder length="0.04" radius="0.06"/></geometry></collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="front_left_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.15 0.15 -0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.8" upper="0.8" effort="500.0" velocity="30.0"/>
  </joint>

  <link name="front_right_wheel">
    <visual><geometry><cylinder length="0.04" radius="0.06"/></geometry><material name="black"/></visual>

<visual><geometry><cylinder length="0.042" radius="0.04"/></geometry><material name="white"/></visual>
    <collision><geometry><cylinder length="0.04" radius="0.06"/></geometry></collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0025" ixy="0" ixz="0" iyy="0.0025" iyz="0" izz="0.0025"/>
    </inertial>
  </link>
  <joint name="front_right_steer_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.15 -0.15 -0.05" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.8" upper="0.8" effort="500.0" velocity="30.0"/>
  </joint>

  <gazebo>
    <plugin filename="gz-sim-ackermann-steering-system" name="gz::sim::systems::AckermannSteering">
      <left_joint>rear_left_joint</left_joint>
      <right_joint>rear_right_joint</right_joint>
      <left_steering_joint>front_left_steer_joint</left_steering_joint>
      <right_steering_joint>front_right_steer_joint</right_steering_joint>
      
      <kingpin_width>0.3</kingpin_width>
      <steering_limit>0.8</steering_limit>
      <wheel_base>0.3</wheel_base>
      <wheel_separation>0.3</wheel_separation>
      <wheel_radius>0.06</wheel_radius>
      
      <min_velocity>-5</min_velocity>
      <max_velocity>5</max_velocity>
      <min_acceleration>-3</min_acceleration>
      <max_acceleration>3</max_acceleration>
      
      <topic>/ackermann_cmd</topic>
      <odom_topic>/odometry</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

</robot>
